CREATE TABLE return0_currencies (
    save_id INTEGER NOT NULL,
    currency TEXT NOT NULL,
    amount INTEGER NOT NULL,

    PRIMARY KEY (save_id, currency)
);

query:
SELECT *
FROM return0_currencies
WHERE save_id = ? AND currency = ?;

queryAll:
SELECT *
FROM return0_currencies
WHERE save_id = ?;

insertOrUpdate:
INSERT OR REPLACE INTO return0_currencies (
    save_id,
    currency,
    amount
) VALUES (?, ?, ?);

deleteBySave:
DELETE FROM return0_currencies
WHERE save_id = ?;
