query:
SELECT *
FROM return0_team
WHERE save_id = ? AND team_id = ?;

queryAll:
SELECT *
FROM return0_team
WHERE save_id = ?;

insertOrUpdate:
INSERT OR REPLACE INTO return0_team (
    save_id,
    team_id,
    name,
    is_activated,
    slot1,
    slot2,
    slot3,
    slot4
) VALUES (?, ?, ?, ?, ?, ?, ?, ?);

deleteBySaveID:
DELETE FROM return0_team
WHERE save_id = ?;

activateTeam:
UPDATE return0_team
SET is_activated = CASE
    WHEN team_id = ? THEN 1
    ELSE 0
END
WHERE save_id = ?;

updateTeamMembers:
UPDATE return0_team
SET slot1 = ?,
    slot2 = ?,
    slot3 = ?,
    slot4 = ?
WHERE save_id = ? AND team_id = ?;

updateTeamName:
UPDATE return0_team
SET name = ?
WHERE save_id = ? AND team_id = ?;

getActivatedTeam:
SELECT *
FROM return0_team
WHERE save_id = ?
  AND is_activated = 1
LIMIT 1;
